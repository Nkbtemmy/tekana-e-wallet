{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "allowJs": true,
      "checkJs": false,
      "outDir": "build",
      "rootDir": "src",
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "resolveJsonModule": true,
      "declaration": false,
      "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }