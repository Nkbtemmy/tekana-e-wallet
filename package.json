{
	"name": "e-wallet",
	"version": "1.0.0",
	"main": "src/server.ts",
	"author": "nkbtemmy <emmanuelnkubito2@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "nodemon",
		"ts:dev": "ts-node-dev --respawn --rs --watch src src/server.ts",
		"start": "node build/server",
		"build": "tsc",
		"clean": "rimraf build",
		"prebuild": "yarn clean",
		"format": "prettier --write .",
		"test": "PORT=20311 jest -C ./jest.unit.json --detectOpenHandles --forceExit",
		"test:coverage": "jest --coverage -C ./jest.unit.json --detectOpenHandles --forceExit",
		"db:migrate": "sequelize db:migrate",
		"db:seed": "sequelize db:seed:all",
		"db:unseed": "sequelize db:seed:undo:all",
		"db:migrate:undo": "sequelize db:migrate:undo:all",
		"db:reset": "npm run db:migrate:undo && npm run db:migrate && npm run db:seed",
		"db:hard:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed",
		"db:create": "sequelize db:create",
		"db:make:migration": " sequelize migration:generate --name",
		"db:drop": "sequelize db:drop"
	},
	"dependencies": {
		"@types/body-parser": "^1.19.2",
		"@types/express": "^4.17.17",
		"@types/node": "^20.5.6",
		"@types/pg": "^8.10.2",
		"@types/sequelize": "^4.28.15",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.2",
		"cloudinary": "^1.41.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"nodemailer": "^6.9.5",
		"pg": "^8.11.3",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.32.1",
		"swagger-ui-express": "^5.0.0",
		"tslint": "^6.1.3",
		"typescript": "^5.2.2"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.22.11",
		"@types/bcryptjs": "^2.4.3",
		"@types/cors": "^2.8.13",
		"@types/jest": "^29.5.4",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/morgan": "^1.9.5",
		"@types/supertest": "^2.0.12",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/uuid": "^9.0.6",
		"jest": "^29.6.4",
		"nodemon": "^3.0.1",
		"supertest": "^6.3.3",
		"prettier": "3.0.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	}
}
